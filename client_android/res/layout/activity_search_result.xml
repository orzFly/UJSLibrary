<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" tools:context=".SearchResultActivity" >

<com.orzfly.ujslibrary.AmazingListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


</com.orzfly.ujslibrary.AmazingListView>

<TextView
    android:id="@+id/empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:text="@string/text_empty"
    android:visibility="gone" />

<LinearLayout
    android:id="@+id/loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:baselineAligned="true"
    android:gravity="center"
    android:padding="12dp" >

        <ProgressBar android:layout_marginRight="8dp" android:layout_height="20dp" android:layout_width="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_loading"
            android:textColor="#000" />

</LinearLayout> 
</LinearLayout>